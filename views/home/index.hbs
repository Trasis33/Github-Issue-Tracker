<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">
      Github issues
    </h1>
    <p>
      This is an Express website handling github issues.
    </p>
  </div>
    {{#if issues.length}}
    <div class="issue-container">
    {{#each issues}}
  <div class="row issues">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1 issue-id" id="issue-{{this.id}}">
        <div class="card-content white-text">
          <span class="card-title yellow-text issue-title">{{this.title}}</span>
          <p class="issue-body">{{this.body}}</p>
        </div>
        <div class="card-action white-text">
          <p class="issue-state">Issue state: {{this.state}}</p>
          <p class="comments right-align issue-comments">Comments: {{this.comments}}</p>
          <a class="issue-url" href="{{this.url}}">Go to issue</a>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
</div>
    {{/if}}
  </div>
</div>
<div class="container">
<hr />
</div>
