<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">
      Github issues
    </h1>
    <p>
      This is an Express website handling github issues.
    </p>
  </div>
  <div class="issues">
    {{#if issues.length}}
    {{#each issues}}
      <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1" id="issue-{{this.id}}">
        <div class="card-content white-text">
          <span class="card-title yellow-text">{{this.title}}</span>
          <p>{{this.body}}</p>
        </div>
        <div class="card-action white-text">
          <p>Issue state: {{this.state}}</p>
          <p class="comments right-align">Comments: {{this.comments}}</p>
          <a href="https://github.com/{{this.url}}">Go to issue</a>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
    {{/if}}
  </div>
</div>
<div class="container">
<hr />
</div>
<!-- /container -->